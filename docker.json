{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "us-east-1",
      "source_ami": "ami-de0d9eb7",
      "instance_type": "t1.micro",
      "ssh_username": "ubuntu",
      "ami_name": "docker-labs {{timestamp}}"
    }
  ],
  "provisioners": [
      {
        "inline": [
          "sudo apt-get update",
          "sudo apt-get install linux-image-extra-`uname -` -y",
          "sudo apt-get install software-properties-common -y",
          "sudo add-apt-repository ppa:dotcloud/lxc-docker -y",
          "sudo apt-get update",
          "sudo apt-get install lxc-docker -y"
        ],
        "type": "shell"
      }
    ]
}
